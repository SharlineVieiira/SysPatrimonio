@model IEnumerable<SysPatrimonio.Models.DtoDepartamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Departamentos</h1>

<p>
    <a asp-action="Create">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nomedepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descricaodepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nomelocal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nomedepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricaodepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomelocal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id"><img src="img/edit.png" right="22" width ="22"/></a> |
                <a asp-action="Details" asp-route-id="@item.id"><img src="img/info.png" right="22" width ="22"/></a> |
                <a asp-action="Delete" asp-route-id="@item.id"><img src="img/del.png" right="22" width ="22"/></a>
            </td>
        </tr>
}
    </tbody>
</table>
